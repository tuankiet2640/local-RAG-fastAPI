# Ollama Configuration
OLLAMA_EMBEDDING_MODEL=llama2    # Model for embeddings
OLLAMA_LLM_MODEL=mistral         # Model for chat
OLLAMA_BASE_URL=http://localhost:11434  # Base URL for Ollama server

# File Upload Configuration
UPLOAD_DIR=uploaded_files        # Directory for uploaded files
MAX_FILE_SIZE=52428800           # 50 MB in bytes

# Logging Configuration
LOG_LEVEL=INFO                   # Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_FILE=app.log                 # Log file name
